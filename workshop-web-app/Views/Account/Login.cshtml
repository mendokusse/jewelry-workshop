@model workshop_web_app.Models.User

@{
    ViewData["Title"] = "Вход в систему";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Account" asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserEmail">Электронная почта</label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserPasswordHash">Пароль</label>
        <input asp-for="UserPasswordHash" type="password" class="form-control" />
        <span asp-validation-for="UserPasswordHash" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>