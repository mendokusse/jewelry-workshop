@model IEnumerable<workshop_web_app.Models.Catalog>

@{
    ViewData["Title"] = "Каталог изделий";
}

<h1>@ViewData["Title"]</h1>

<button id="makeOrderBtn" class="btn btn-primary">Сделать заказ</button>

<div id="modalContainer"></div>

<!-- Форма фильтрации -->
<form method="get" asp-controller="Catalog" asp-action="Index">
    <div class="row">
        <div class="col-md-3">
            <label for="productTypeId">Тип изделия</label>
            <select id="productTypeId" name="productTypeId" class="form-control">
                <option value="">Все</option>
                @if(ViewBag.ProductTypes != null)
                {
                    foreach (var pt in (IEnumerable<workshop_web_app.Models.ProductType>)ViewBag.ProductTypes)
                    {
                        <option value="@pt.ProductTypeId">@pt.ProductTypeName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <label for="minPrice">Мин. цена</label>
            <input type="number" step="0.01" id="minPrice" name="minPrice" class="form-control" placeholder="От" />
        </div>
        <div class="col-md-3">
            <label for="maxPrice">Макс. цена</label>
            <input type="number" step="0.01" id="maxPrice" name="maxPrice" class="form-control" placeholder="До" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Применить фильтр</button>
        </div>
    </div>
</form>

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <img src="~/catalog-img/@item.ProductImgPath" class="card-img-top" alt="@item.ProductName" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.ProductName</h5>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $("#makeOrderBtn").click(function(){
                $.ajax({
                    url: '@Url.Action("Create", "Order")',
                    type: 'GET',
                    success: function(data) {
                        $("#modalContainer").html(data);
                        $("#createOrderModal").modal("show");
                    },
                    error: function() {
                        alert("Ошибка при загрузке формы заказа.");
                    }
                });
            });
            
            $(document).on("click", "#submitOrderBtn", function(){
                var form = $("#createOrderForm");
                console.log("Отправляем данные формы:", form.serialize());
                $.ajax({
                    type: "POST",
                    url: form.attr("action"),
                    data: form.serialize(),
                    success: function(response) {
                        console.log("Ответ сервера:", response);
                        if(response.success){
                            $("#createOrderModal").modal("hide");
                            window.location.reload();
                        } else {
                            alert("Ошибка при создании заказа.");
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Ошибка при отправке данных:", status, error);
                        alert("Ошибка при отправке данных.");
                    }
                });
            });
        });
    </script>
}